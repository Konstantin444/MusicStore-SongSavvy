@model MusicStore.Models.AlbumSong

@{
    ViewData["Title"] = "Album and Song Details";
}

<br />
<h1>Album and Song Details</h1>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <hr />
            <dl class="row" style="font-size: 20px;">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Album.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Album.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Song.SongTitle)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Song.SongTitle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Song.Artist.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Song.Artist.Name)
                </dd>
            </dl>

            <div class="form-group justify-content-evenly">
                <a asp-action="Edit" asp-route-id="@Model.AlbumSongID" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to the List</a>
            </div>
        </div>
    </div>
</div>
