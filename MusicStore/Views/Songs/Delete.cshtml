@model MusicStore.Models.Song

@{
    ViewData["Title"] = "Delete Song";
}

<br />
<h1>Delete a Song</h1>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <hr />
            <dl class="row" style="font-size: 20px;">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SongTitle)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SongTitle)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Genre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Genre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReleaseYear)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReleaseYear)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Artist.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Artist.Name)
                </dd>
            </dl>

            <form id="deleteForm" asp-action="Delete" method="post">
                <input type="hidden" asp-for="SongID" />
                <div class="form-group justify-content-evenly">
                    <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to Songs</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this song?")) {
            document.getElementById("deleteForm").submit();
        }
    }
</script>
