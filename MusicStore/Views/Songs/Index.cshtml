@model IEnumerable<MusicStore.Models.Song>

@{
    ViewData["Title"] = "Songs";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <p class="text-center">
                <a asp-action="Create" class="btn btn-primary">Add New Song</a>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SongTitle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Genre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReleaseYear)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Artist.Name)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="font-size: 18px">
                                    @Html.DisplayFor(modelItem => item.SongTitle)
                                </td>
                                <td style="font-size: 18px">
                                    @Html.DisplayFor(modelItem => item.Genre)
                                </td>
                                <td style="font-size: 18px">
                                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                                </td>
                                <td style="font-size: 18px">
                                    @Html.DisplayFor(modelItem => item.Artist.Name)
                                </td>
                                <td>
                                    <div class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.SongID" class="btn btn-primary btn-sm d-flex align-items-center mb-2 justify-content-center">Edit</a>
                                    </div>
                                    <div class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.SongID" class="btn btn-info btn-sm d-flex align-items-center mb-2 justify-content-center">Details</a>
                                    </div>
                                    <div class="text-center">
                                        <a asp-action="Delete" asp-route-id="@item.SongID" class="btn btn-danger btn-sm d-flex align-items-center justify-content-center">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
