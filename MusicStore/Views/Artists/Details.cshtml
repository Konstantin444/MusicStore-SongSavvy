@model MusicStore.Models.Artist

@{
    ViewData["Title"] = "Artist Details";
}

<br />
<h1>Artist Details</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <hr />
            <dl class="row" style="font-size: 20px;">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Country)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Bio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Bio)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="text-left">
                <a asp-action="Edit" asp-route-id="@Model?.ArtistID" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to Artists</a>
            </div>
        </div>
    </div>
</div>
