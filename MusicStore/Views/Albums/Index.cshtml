@model IEnumerable<MusicStore.Models.Album>

@{
    ViewData["Title"] = "Albums";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>
            <p class="text-center">
                <a asp-action="Create" class="btn btn-primary">Add New Album</a>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.AlbumCoverURL)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ReleaseDate)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.AlbumCoverURL" alt="@item.Title" class="img-fluid" style="max-width: 100px;" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                                </td>
                                <td>
                                    <div class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.AlbumID" class="btn btn-primary btn-sm d-flex align-items-center mb-2 justify-content-center">Edit</a>
                                    </div>
                                    <div class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.AlbumID" class="btn btn-info btn-sm d-flex align-items-center mb-2 justify-content-center">Details</a>
                                    </div>
                                    <div class="text-center">
                                        <a asp-action="Delete" asp-route-id="@item.AlbumID" class="btn btn-danger btn-sm d-flex align-items-center justify-content-center">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
